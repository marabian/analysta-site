  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const starsContainer = document.getElementById("stars-container");
      const numStars = 200;

      // Create stars
      for (let i = 0; i < numStars; i++) {
        createStar(starsContainer);
      }

      function createStar(container) {
        const star = document.createElement("div");
        const size = Math.random() * 2;

        // Position randomly
        const x = Math.floor(Math.random() * 100);
        const y = Math.floor(Math.random() * 100);

        // Star styling
        star.style.position = "absolute";

        // Get current theme
        const isDark = document.documentElement.classList.contains("dark");
        const sizeMultiplier = isDark ? 1 : 1.5;

        star.style.width = `${size * sizeMultiplier}px`;
        star.style.height = `${size * sizeMultiplier}px`;
        star.style.borderRadius = "50%";

        // Different style based on theme
        if (isDark) {
          star.style.backgroundColor = "white";
          star.style.boxShadow = "none";
        } else {
          star.style.backgroundColor = "#3245FF";
          star.style.boxShadow = "0 0 4px rgba(50, 69, 255, 0.8)";
        }

        star.style.opacity = Math.random() * 0.7 + 0.3;
        star.style.left = `${x}%`;
        star.style.top = `${y}%`;

        // Animation
        star.style.animation = `twinkle ${Math.random() * 5 + 3}s infinite ease-in-out ${Math.random() * 5}s`;

        // Add to container
        container.appendChild(star);
      }
    });
  </script>

  <style>
    @keyframes twinkle {
      0%,
      100% {
        opacity: 0.2;
        transform: scale(0.8);
      }
      50% {
        opacity: 0.9;
        transform: scale(1.2);
      }
    }

    /* Additional star styles for different modes */
